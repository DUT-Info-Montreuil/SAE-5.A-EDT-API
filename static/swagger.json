      "/courses/add": {
        "put": {
          "tags": ["Courses"],
          "summary": "Add a course",
          "description": "Add a course by data in JSON format",
          "requestBody": {
            "content": {
              "application/json": {
                "example": {
                  "course_name": "Math",
                  "teacher_id": 1,
                  "room_id": 101
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Course successfully added!"
            },
            "404": {
              "description": "Course not found"
            }
          }
        }
      },
      "/courses/delete/{id}": {
        "delete": {
          "tags": ["Courses"],
