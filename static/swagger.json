{
    "openapi": "3.0.3",
    "info": {
      "title": "Flask Service API",
      "description": "API for managing edt app",
      "version": "1.0.0"
    },
    "paths": {
      "/courses/get": {
        "get": {
          "tags": ["Courses"],
          "summary": "Get all courses",
          "description": "Get all courses in JSON format",
          "responses": {
            "200": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "example": {
                    "courses": []
                  }
                }
              }
            }
          }
        }
      },
      "/courses/get/{id}": {
        "get": {
          "tags": ["Courses"],
          "summary": "Get a course by ID",
          "description": "Get a course by ID in JSON format",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "example": {
                    "course": {}
                  }
                }
              }
            },
            "404": {
              "description": "Course not found"
            }
          }
        }
      },
      "/courses/timetable/by-room": {
        "post": {
          "tags": ["Courses"],
          "summary": "Get timetable by room",
          "description": "Get timetable by group",
          "requestBody": {
            "content": {
              "application/json": {
                "example": {
                  "room_id": 1
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "example": {
                    "edt": []
                  }
                }
              }
            },
            "400": {
              "description": "Invalid argument"
            }
          }
        }
      },
