          "requestBody": {
            "content": {
              "application/json": {
                "example": {
                  "teacher_id": 1
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "example": {
                    "edt": []
                  }
                }
